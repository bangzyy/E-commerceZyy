<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.pab.ecommerce_katalog.ui.overview.OverviewFragment"
        android:label="Overview"
        tools:layout="@layout/fragment_overview" />
    
    <fragment
        android:id="@+id/acceptedProductsFragment"
        android:name="com.pab.ecommerce_katalog.ui.overview.AcceptedProductsFragment"
        android:label="Produk Terjual"
        tools:layout="@layout/fragment_accepted_products" />

    <fragment
        android:id="@+id/productFragment"
        android:name="com.pab.ecommerce_katalog.ui.product.ProductFragment"
        android:label="Product"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/adminOrderFragment"
        android:name="com.pab.ecommerce_katalog.fragments.AdminOrderFragment"
        android:label="Customer Orders"
        tools:layout="@layout/fragment_admin_order" />

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.pab.ecommerce_katalog.ui.users.UsersFragment"
        android:label="Users"
        tools:layout="@layout/fragment_users" />
    
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.pab.ecommerce_katalog.ui.order.OrderFragment"
        android:label="Order"
