<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- ================= BANNER ================= -->
    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/banner"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ================= MENU KATEGORI ================= -->
    <LinearLayout
        android:id="@+id/categoryMenu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnMan"
            style="@style/CategoriesButtonActive"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Man" />

        <Space android:layout_width="10dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnWomen"
            style="@style/CategoriesButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Women" />

        <Space android:layout_width="10dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnKids"
            style="@style/CategoriesButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Kids" />

        <Space android:layout_width="10dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnNew"
            style="@style/CategoriesButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="New" />
    </LinearLayout>

    <!-- ================= BRAND LOGO ================= -->
    <LinearLayout
        android:id="@+id/brandLogo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/categoryMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_rolex" />

        <Space android:layout_width="20dp" android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_gucci" />

        <Space android:layout_width="20dp" android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_hm" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/brandLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product"/>

</androidx.constraintlayout.widget.ConstraintLayout>